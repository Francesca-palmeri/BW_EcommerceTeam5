@model Carrello

<div class="container mt-4">
    <h2>Il tuo carrello</h2>

    @if (Model.Products != null && Model.Products.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Immagine</th>
                    <th>Nome</th>
                    <th>Descrizione</th>
                    <th>Prezzo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td><img src="@product.Immagine" alt="@product.Nome" style="width:100px;" /></td>
                        <td>@product.Nome</td>
                        <td>@product.Descrizione</td>
                        <td>@product.Prezzo.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <h4>Totale Carrello: @Model.TotaleCarrello.ToString("C")</h4>
        </div>
    }
    else
    {
        <p>Il tuo carrello è vuoto.</p>
    }
</div>