<!-- Modulo per aggiungere al carrello -->
<form method="post" asp-controller="Cart" asp-action="Aggiungi">
    <input type="hidden" name="prodottoId" value="@Model.Id" />
    @Html.HiddenFor(model => model.Id) <!-- Aggiunto per sicurezza -->
    <input type="number" name="quantity" value="1" min="1" />
    <button type="submit">Aggiungi al carrello</button>
</form>
<div>
	<a href="@Url.Action("Index", "Product")" class="btn btn-danger mt-3">Torna alla Vetrina</a>
</div>

