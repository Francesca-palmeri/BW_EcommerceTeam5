<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceTeam5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div class="container-fluid" >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EcommerceTeam5</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Admin">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid m-0">
        <main role="main" class="pb-1 m-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container-fluid footerContainer">

            <div class="row d-flex justify-content-between">

                    <div class="col xs-10">
                       <ul class="footerList pb-0 ms-0 d-flex flex-wrap justify-content-between">
                        <li>
                            <a href="javascript:void(0)">Contattaci</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Assistenza</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Ordini</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Garanzia</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Spedizioni</a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">Termini e Condizioni d'uso</a>
                        </li>
					   </ul>
                    </div>
				
                    <div class="col xs-2 text-end pb-0 me-3">
                        <select style="width: 220px" aria-label="Default select example">
                            <option>Italiano(Italian)</option>
                            <option>English(English)</option>
                            <option>Español(Spanish)</option>
                            <option>Français(French)</option>
                            <option>Deutsch(German)</option>
                        </select>
                   
                    </div>
			</div>


            <p class="ps-2 ms-3"> &copy; 2025 - EcommerceTeam5 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> </p>
		</div>

		
            
            
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
